<% include ../templates/head.ejs %>

<section>
  <div class="container-fluid">
    <p class="mb-3 subtitle">전체 공지사항을 간편하게 등록하고 관리할 수 있습니다</p>
  </div>
  <div class="card">
    <table class="table table-default table-hover table-striped">
      <thead>
        <th>번호</th>

        <th>공지제목</th>
        <th>작성자</th>
        <th>가맹점 공지여부</th>
        <th>노출여부</th>
        <th>등록일</th>
        <th>최종수정일</th>
      </thead>
      <tbody>
        <% %>
        <% for(var i=0; i<notices.length; i++){
          var notice = notices[i];
          %>
        <tr>
          <td><%=(i+1)%></td>

          <td><a href="../notices/detail/<%=notice.noticeNo%>"><%=notice.noticeTitle%></a></td>
          <td><%=notice.userNo%></td>
          <td><%=notice.noticeOwnerYn%></td>
          <td><%=notice.showYn%></td>
          <td><%=moment(notice.createDate).format("YYYY-MM-DD")%></td>
          <td><%=moment(notice.updateDate).format("YYYY-MM-DD")%></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>

<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var notice =  $('#createForm').serializeObject();
    $.ajax({
      type:"POST",
      url:'/notices',
      data:notice,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var noticeId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/notices/'+noticeId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
<script>
$(document).ready(function(){
  $('.sidebar .nav .active').removeClass('active');
  var path = "noticesAll" ;
  $('#'+path).addClass('active');
})
</script>
