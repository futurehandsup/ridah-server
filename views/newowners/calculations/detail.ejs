<% include ../templates/head.ejs %>

<section>
  <div class="container-fluid">
    <p class="mb-3 subtitle">정산내역을 자세히 확인할 수 있습니다</p>
  </div>

  <div class="card" style="margin-bottom: 20px;">
    <table class="table table-default table-hover table-bordered">
      <thead>
        <th style="color : #008d87; text-align : left;">정산내역 세부</th>
        <th></th>
      </thead>
      <tbody>
          <tr>
            <td class="info-head">정산번호</td>
            <td class="info-info"><%=calculation.calculationNo%></td>
          </tr>
          <tr>
            <td class="info-head">정산년월</td>
            <td class="info-info"><%=calculation.calculationYear%>년 <%=calculation.calculationMonth%>월</td>
          </tr>
          <tr>
            <td class="info-head">정산금액</td>
            <td class="info-info"><%=calculation.calculationPrice%></td>
          </tr>
          <tr>
            <td class="info-head">정산예정일</td>
            <td class="info-info"><%=moment(calculation.calculationDueDate).format("YYYY-MM-DD")%></td>
          </tr>
          <tr>
            <td class="info-head">정산상태</td>
            <td class="info-info"><%=calculation.calculationStatus%></td>
          </tr>
          <tr>
            <td class="info-head">정산완료일</td>
            <td class="info-info"><%=(calculation.calculationDate == "" || calculation.calculationDate == null) ? "-" : moment(calculation.calculationDate).format("YYYY-MM-DD")%></td>
          </tr>
          <tr>
            <td class="info-head">입금은행</td>
            <td class="info-info"><%=calculation.accountBank%></td>
          </tr>
          <tr>
            <td class="info-head">입금계좌</td>
            <td class="info-info"><%=calculation.accountInfo%></td>
          </tr>
          <tr>
            <td class="info-head">작성일</td>
            <td class="info-info"><%=moment(calculation.createDate).format("YYYY-MM-DD")%></td>
          </tr>
          <tr>
            <td class="info-head">수정일</td>
            <td class="info-info"><%=moment(calculation.updateDate).format("YYYY-MM-DD")%></td>
          </tr>
      </tbody>
    </table>
  </div>

  <a href="../list" type="button" class="btn search_submit search_reset" style="width : 130px;">이전으로</a>

</section>

<% include ../templates/bottom.ejs %>
