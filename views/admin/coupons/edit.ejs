<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="header">
            <h4 class="title">이용권 관리 수정</h4>
          </div>
          <div class="content">
            <form id="editForm">
              <div class="row">
              <% var keys = Object.keys(coupon._doc); %>

                <div class="col-md-4">
                            <label for="programType">타입</label><br>
                            <select name="programType" id="programType" class="form-control">
                              <option value="체험일반">체험일반</option>
                              <option value="체험고급">체험고급</option>
                              <option value="자유기승">자유기승</option>
                            </select>
                </div><br>

                 <div class="col-md-4">
                  <div class="form-group">
                    <label>유효기간</label>
                    <input name="validFor" type="text" class="form-control" placeholder="validFor" value="<%=coupon['validFor']%>">
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="form-group">
                    <label>사용가능 횟수</label>
                    <input name="availablecount" type="text" class="form-control" placeholder="availablecount" value="<%=coupon['availablecount']%>">
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="form-group">
                    <label>가격</label>
                    <input name="price" type="text" class="form-control" placeholder="price" value="<%=coupon['price']%>">
                  </div>
                </div>

                 <div class="col-md-4">
                  <div class="form-group">
                    <label>쿠폰명</label>
                    <input name="couponname" type="text" class="form-control" placeholder="couponname" value="<%=coupon['couponname']%>">
                  </div>
                </div>

               </div>

              <button id="editButton" type="button" class="btn btn-info btn-fill pull-right">저장</button>
              <a href="../list" type="button" class="btn btn-info pull-right">이전으로</a>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card card-user">
          <div class="image">
            <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..." />
          </div>
          <div class="content">
            <div class="author">
              <a href="#">
                              <img class="avatar border-gray" src="assets/img/faces/face-3.jpg" alt="..."/>

                                <h4 class="title">Mike Andrew<br />
                                   <small>michael24</small>
                                </h4>
                              </a>
            </div>
            <p class="description text-center"> "Lamborghini Mercy <br> Your chick she so thirsty <br> I'm in that two seat Lambo"
            </p>
          </div>
          <hr>
          <div class="text-center">
            <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
            <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
            <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#editButton').click(function(){
    var coupon =  $('#editForm').serializeObject();

    $.ajax({
      type:"PUT",
      url:'/coupons/<%=coupon.id%>',
      data:coupon,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
