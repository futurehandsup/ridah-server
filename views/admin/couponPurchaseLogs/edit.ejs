          <div class="content">
            <form id="editForm">
              <div class="row">
              <% var keys = Object.keys(couponPurchaseLog._doc); %>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>사용자</label>
                    <input name="user" type="text" class="form-control" placeholder="user" value="<%=couponPurchaseLog['user']%>">
