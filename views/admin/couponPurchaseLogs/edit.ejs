                <div class="col-md-4">
                  <div class="form-group">
                    <label>가격</label>
                    <input name="price" type="text" class="form-control" placeholder="price" value="<%=couponPurchaseLog['price']%>">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>payment</label>
                    <input name="payment" type="text" class="form-control" placeholder="payment" value="<%=couponPurchaseLog['payment']%>">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>구매날짜</label>
                    <input name="created_at" type="text" class="form-control" placeholder="created_at" value="<%=couponPurchaseLog['created_at']%>">
                  </div>
                </div>

              </div>

              <button id="editButton" type="button" class="btn btn-info btn-fill pull-right">저장</button>
