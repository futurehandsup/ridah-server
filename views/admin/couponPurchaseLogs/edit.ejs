      </div>

    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#editButton').click(function(){
    var couponPurchaseLog =  $('#editForm').serializeObject();

    $.ajax({
      type:"PUT",
      url:'/couponPurchaseLogs/<%=couponPurchaseLog.id%>',
      data:couponPurchaseLog,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
