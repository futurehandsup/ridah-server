<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="header">
            <h4 class="title">프로그램 수정</h4>
          </div>
          <div class="content">
            <form id="editForm">
              <div class="row">
              <% var keys = Object.keys(schema); %>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>프로그램명</label>
                    <input name="programname" type="text" class="form-control" placeholder="programname" value="<%=program['programname']%>">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>승마장명</label>
                    <input name="program" type="text" class="form-control" placeholder="program" value="<%=program['program']%>">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>소개</label>
                    <input name="introduction" type="text" class="form-control" placeholder="introduction" value="<%=program['introduction']%>">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>타입</label>
                    <input name="programtype" type="text" class="form-control" placeholder="programtype" value="<%=program['programtype']%>">
                  </div>
                </div>
              </div>

              <div class="col-md-4">
                  <div class="form-group">
                    <label>프로그램 시작시각</label>
                    <input name="time.start.hours" type="text" class="form-control" placeholder="time.start.hours" value="<%=program['time.start.hours']%>">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>프로그램 진행시간</label>
                    <input name="time.howlong" type="text" class="form-control" placeholder="time.howlong" value="<%=program['time.howlong']%>">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label>예약</label>
                    <input name="reservations" type="text" class="form-control" placeholder="reservations" value="<%=program['reservations']%>">
                  </div>
                </div>
                
              </div>

              <button id="editButton" type="button" class="btn btn-info btn-fill pull-right">저장</button>
              <a href="../list" type="button" class="btn btn-info pull-right">이전으로</a>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card card-user">
          <div class="image">
            <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..." />
          </div>
          <div class="content">
            <div class="author">
              <a href="#">
                              <img class="avatar border-gray" src="assets/img/faces/face-3.jpg" alt="..."/>

                                <h4 class="title">Mike Andrew<br />
                                   <small>michael24</small>
                                </h4>
                              </a>
            </div>
            <p class="description text-center"> "Lamborghini Mercy <br> Your chick she so thirsty <br> I'm in that two seat Lambo"
            </p>
          </div>
          <hr>
          <div class="text-center">
            <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
            <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
            <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#editButton').click(function(){
    var program =  $('#editForm').serializeObject();

    $.ajax({
      type:"PUT",
      url:'/programs/<%=program.id%>',
      data:program,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
