<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title"><%=title%>
              <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#createModal" data-backdrop="false">
              만들기
              </button></h4>
            <p class="caategory">Here is a subtitle for this table</p>
          </div>
          <!-- Modal -->
          <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">승마장 등록</h4>
                </div>
                <div class="modal-body">
                  <div class="content">
                    <form id="createForm" action="/recommends" method="POST">
                      <div class="row">
                        <% var keys = Object.keys(schema);

                       for(var j=0; j< keys.length; j++){
                         if(keys[j]=="__v" || keys[j]=="_id" || keys[j].includes("deleted") || keys[j].includes("_at") ) continue;%>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label><%=keys[j]%></label>
                            <input name="<%=keys[j]%>" type="text" class="form-control" placeholder="<%=keys[j]%>" value="">
                          </div>
                        </div>

                      <% } %>
                      </div>
                      <div class="clearfix"></div>
                    </form>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary" id="createButton">저장</button>
                </div>
              </div>
            </div>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
                <th>ID</th>
                <% var keys = Object.keys(schema); %>
                
                <th>승마장명</th>
                <th>제목</th>
                <th>작성자</th>
                <th>내용</th>
                <th>답변</th>
                <th>작성일</th>
                <th>수정일</th>
                           
                <th>작업</th>

              </thead>
              <tbody>
                <% %>
                <% for(var i=0; i<recommends.length; i++){
                  var recommend = recommends[i];
                  %>
                  <tr>
                    <td><%=i%></td>
                   
                    <td><%=recommend['recommendStore']%></td>
                    <td><%=recommend['recommendTitle']%></td>
                    <td><%=recommend['recommendWriter'].username%></td>
                    <td><%=recommend['recommendText']%></td>
                    <td><%=recommend['replies']%></td>
                    <td><%=recommend['created_at']%></td>
                    <td><%=recommend['updated_at']%></td>
                    
                    <td>
                      <button data-item="<%=recommend.id%>" class="btn btn-danger btn-fill btn-sm deleteButton"><span class="fa fa-trash"></span></button>
                      <a href="edit/<%=recommend.id%>" class="btn btn-info btn-fill btn-sm"><span class="fa fa-pencil"></span></button>
                    </td>
                  </tr>
                <% }%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var recommend =  $('#createForm').serializeObject();
    $.ajax({
      type:"POST",
      url:'/recommends',
      data:recommend,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var recommendId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/recommends/'+recommendId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
