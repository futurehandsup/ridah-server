<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title"><%=title%>
              <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#createModal" data-backdrop="false">
              만들기
              </button></h4>
            <p class="caategory">Here is a subtitle for this table</p>
          </div>
          <!-- Modal -->
          <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">메인헤더 등록</h4>
                </div>
                <div class="modal-body">
                  <div class="content">
                    <form id="createForm" action="/headers" method="POST">
                      <div class="row">
                        
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>헤더 이미지</label>
                            <input name="headerImg" type="text" class="form-control" placeholder="헤더 이미지" value="">
                          </div>
                        </div>

                        <div class="col-md-4">
                          <div class="form-group">
                            <label>헤더 페이지</label>
                            <input name="headerUrl" type="text" class="form-control" placeholder="헤더 페이지" value="">
                          </div>
                        </div>                   

                      </div>
                      <div class="clearfix"></div>
                    </form>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary" id="createButton">저장</button>
                </div>
              </div>
            </div>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
                <th>ID</th>
                <% var keys = Object.keys(schema); %>
                
                <th>헤더 이미지</th>
                <th>헤더 페이지</th>
                <th>작성일</th>
                <th>수정일</th>
                                           
                <th>작업</th>

              </thead>
              <tbody>
                <% %>
                <% for(var i=0; i<headers.length; i++){
                  var header = headers[i];
                  %>
                  <tr>
                    <td><%=i%></td>

                    <td><%=header['headerTitle']%></td>
                    <td><%=header['headerUrl']%></td>
                    <td><%=header['created_at']%></td>
                    <td><%=header['updated_at']%></td>

                    <td>
                      <button data-item="<%=header.id%>" class="btn btn-danger btn-fill btn-sm deleteButton"><span class="fa fa-trash"></span></button>
                      <a href="edit/<%=header.id%>" class="btn btn-info btn-fill btn-sm"><span class="fa fa-pencil"></span></button>
                    </td>
                  </tr>
                <% }%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var header =  $('#createForm').serializeObject();
    $.ajax({
      type:"POST",
      url:'/headers',
      data:header,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var headerId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/headers/'+headerId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
