<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title"><%=title%>
              <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#createModal" data-backdrop="false">
              만들기
              </button></h4>
            <p class="caategory">Here is a subtitle for this table</p>
          </div>
          <!-- Modal -->
          <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">메인헤더 등록</h4>
                </div>
                <div class="modal-body">
                  <div class="content">
                    <!--서버에 이미지 업로드하는 모듈-->
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>헤더 이미지</label>
                          <form id='imageForm'>
                            <input id="imageInput" name="images" type="file" accept="image/*">
                          </form>
                          <div id="previewBox" style="display:none;">
                            <img src="" style="width: 100%; height:auto;" >
                          </div>
                          <div id="imageUploadButton"></div>
                        </div>
                      </div>
                    </div>
                    <!--서버에 이미지 업로드하는 모듈 끝-->
                    <form id="createForm" action="/headers" method="POST">
                      <div class="row">

                        <div class="col-md-12">
                          <div class="form-group">
                            <label>헤더 페이지</label>
                            <input name="headerUrl" type="text" class="form-control" placeholder="헤더 페이지" value="">
                          </div>
                        </div>

                      </div>
                      <div class="clearfix"></div>
                    </form>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary" id="createButton">저장</button>
                </div>
              </div>
            </div>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
                <th>ID</th>
                <% var keys = Object.keys(schema); %>

                <th>헤더 이미지</th>
                <th>헤더 페이지</th>
                <th>작성일</th>
                <th>수정일</th>

                <th>작업</th>

              </thead>
              <tbody>
                <% %>
                <% for(var i=0; i<headers.length; i++){
                  var header = headers[i];
                  %>
                  <tr>
                    <td><%=i%></td>

                    <td><img width="50" src="<%=header['headerImg']%>"/></td>
                    <td><%=header['headerUrl']%></td>
                    <td><%=header['created_at']%></td>
                    <td><%=header['updated_at']%></td>

                    <td>
                      <button data-item="<%=header.id%>" class="btn btn-danger btn-fill btn-sm deleteButton"><span class="fa fa-trash"></span></button>
                      <a href="edit/<%=header.id%>" class="btn btn-info btn-fill btn-sm"><span class="fa fa-pencil"></span></button>
                    </td>
                  </tr>
                <% }%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  var imageUrl = ""
  $('#imageInput').change(function(){
    //일단 한장 테스트
    let files = this.files;

    //for(var i=0;i<files.length;i++){}
    let file = files[0];
    var imageType = /image.*/; //이미지 파일일 경우만 뿌려줌.
    if (!file.type.match(imageType))
      return false; //continue;

    var img = $('#previewBox').find('img')[0]
    img.src = window.URL.createObjectURL(file);
    $('#previewBox').show();
    $('#imageUploadButton').click();

  })
  $('#imageUploadButton').click(function(){
    let files = $('#imageInput')[0].files;
    if(files.length === 0) return false;

    //let file = files[0];
    var formData = new FormData($('#imageForm')[0]);
    //formData.append("images", files, files[0].name);

    console.log(formData.has('images')) // true)

    $.ajax({
      type:"POST",
      method: 'POST',
      url:'/modules/uploadImage',
      data: formData,
      cache: false,
      contentType: false,
      processData: false,
      success:function(data){
        alert("성공했습니다.\nurl:"+data.file);
        imageUrl = data.file;
        $('#storeImage').attr('src', imageUrl);
        $('#imageModal').modal('hide')
      },
      error:function(e){
        alert(e.responseText);
      }
    });

  })


  $('#createButton').click(function(){
    var header =  $('#createForm').serializeObject();

    header.headerImg = imageUrl;

    $.ajax({
      type:"POST",
      url:'/headers',
      data:header,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var headerId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/headers/'+headerId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
