 <div class="container-fluid">
    <h2 class="my-3">예약내역</h2>
    <div class="card">

    <div class="card" style="margin-bottom: 20px;">
      <div class="card-header">
        <form action="" method="get">
        <input type="hidden" name="storeId" value="<%=store._id%>"><!--필수-->
        <div>
          조회기간
          <ul style="display: block; float: right;">일간</ul>
          <ul style="display: block; float: right;">주간</ul>
          <ul style="display: block; float: right;">월간</ul>
          <!--css등을 이용하여 버튼으로-->
          <input type="date" name="date_from" value="<%=query.date_from%>" class = "form-control">
          <input type="date" name="date_until" value="<%=query.date_until%>" class = "form-control">
        </div>
        <div style="margin-top: 10px;">
          <ul style="display: block; float: right;">
            <button class="btn btn-success">검색</button>
          </ul>
          <select placeholder="상세조건" name="search_condition" class="form-control">

            <option value="예약번호" <%=(query.search_condition=="예약번호")? "selected" : ""%>>예약번호</option>
            <option value="예약상태" <%=(query.search_condition=="예약상태")? "selected" : ""%>>예약상태</option>
            <!--<option>프로그램명</option>-->
            <option value="예약자명" <%=(query.search_condition=="예약자명")? "selected" : ""%>>예약자명</option>
            <option value="전화번호" <%=(query.search_condition=="전화번호")? "selected" : ""%>>전화번호</option>
          </select>
          <input type="text" name="search_key" value="<%=query.search_key%>" class="form-control">
        </div>
      </form>
      </div>

    </div>

    <div class="card" style="margin-bottom: 20px;">
      <!-- <div class="card-header">
        검색결과
      </div> -->
      <ul class="list-group list-group-flush">

          <li class="list-group-item">
            <table class="table table-hover table-striped">
              <thead>
                <% var keys = Object.keys(schema); %>
                <th>선택</th>
                <th>예약번호</th>
                <th>예약일시</th>
                <th>이용예정일</th>
                <th>예약상태</th>
                <th>프로그램명</th>
                <th>인원</th>
                <th>예약자명</th>
                <th>전화번호</th>
              </thead>
              <tbody>
                <% %>
                <% for(var i=0; i<reservations.length; i++){
                  var reservation = reservations[i];
                  %>
                  <tr>
                    <td><%=i%></td>

                    <td><%=reservation['_id']%>
                    <td><%=reservation['created_at']%></td>
                    <td><%=reservation['reservationDate']%></td>
                    <td><%=reservation['status']%></td>

                    <td><%=reservation['program'].programname%></td>
                    <td><%=reservation['howMany']%></td>
                  
                    <td><%=reservation['ownerName']%></td>
                    <td><%=reservation['telephone']%></td>

                    <td>
                     <!--  <button data-item="<%=reservation.id%>" class="btn btn-danger btn-fill btn-sm deleteButton"><span class="fa fa-trash"></span></button>
                      <a href="edit/<%=reservation.id%>" class="btn btn-info btn-fill btn-sm"><span class="fa fa-pencil"></span></button> -->
                    </td>
                  </tr>
                <% }%>
              </tbody>
            </table>
          </li>

      </ul>
    </div>

    </div>
</div>

<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var program =  $('#createForm').serializeObject();
    program.store = '<%=store.id%>';

    $.ajax({
      type:"POST",
      url:'/programs',
      data:program,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var programId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/programs/'+programId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
