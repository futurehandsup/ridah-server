<% include ../templates/header.ejs %>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <form id="editForm">
        <div class="col-md-8"> <!--왼쪽 스케줄 상세정보-->
          <div class="card">
            <div class="content">
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label>공지번호</label>
                    <p class="form-control-static"><%=notice.noticeNo%></p>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="form-group">
                    <label>공지제목</label>
                    <input type="text" class="form-control" name="noticeTitle" value="<%=notice.noticeTitle%>">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>공지내용</label>
                    <textarea name="noticeContents" rows="10" class="form-control" value="<%=notice.noticeContents%>"></textarea>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>작성자 회원번호</label>
                    <input type="text" class="form-control" name="userNo" value="<%=notice.userNo%>">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>작성자</label>
                    <p class="form-control-static"><%=notice.userName%></p>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label>일반공지</label>
                    <input type="radio" name="noticeNormalYn" value="1" class="form-control-static"> 공지함
                      <input type="radio" name="noticeNormalYn" value="0" class="form-control-static"> 공지안함
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label>가맹점공지</label>
                    <input type="radio" name="noticeOwnerYn" value="1" class="form-control-static"> 공지함
                    <input type="radio" name="noticeOwnerYn" value="0" class="form-control-static"> 공지안함
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4"> <!--오른쪽 스케줄 상세정보-->
          <div class="card">
            <div class="content">
              <div class="row">
                <div class="form-group col-md-6">
                  <label>등록일</label>
                  <p class="form-control-static"><%=moment(notice.createDate).format("YYYY-MM-DD")%></a></p>
                </div>
                <div class="form-group col-md-6">
                  <label>수정일</label>
                  <p class="form-control-static"><%=(notice.updateDate == null || notice.updateDate == "") ? "N/N" : moment(notice.updateDate).format("YYYY-MM-DD") %></p>
                </div>
                <div class="form-group col-md-12">
                  <label>노출여부</label>
                  <select class="form-control" name="showYn">
                    <option value="1">노출</option>
                    <option value="0">노출안함</option>
                  </select>
                </div>
              </div>
          </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-12">
            <button id="editButton" type="button" class="btn btn-info btn-fill pull-right">저장</button>
            <a href="../list" type="button" class="btn btn-info pull-left">이전으로</a>
            <div class="clearfix"></div>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>

<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#editButton').click(function(){
    var notice =  $('#editForm').serializeObject();

    $.ajax({
      type:"PUT",
      url:'/apis/admin/notice/<%=notice.noticeNo%>',
      data:notice,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
