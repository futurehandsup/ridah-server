
<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title"><%=title%>
              <a class="btn btn-primary pull-right" href='../banners/state' style="float: right; margin-left: 10px;">
              그래프
              </a>
              <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#createModal" data-backdrop="false">
              만들기
              </button>
             <!-- <button type="button" class="btn btn-primary pull-right"
               onclick="window.open('../state.ejs')" style="margin-right: 10px;">
              그래프
              </button> -->
            </h4>
            <p class="category">Here is a subtitle for this table</p>
          </div>
          <!-- Modal -->
          <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">사용자 등록</h4>
                </div>
                <div class="modal-body">
                  <div class="content">
                    <form id="createForm" action="/banners" method="POST">
                      <div class="row">
                          <div>
                            &nbsp; <label>분류</label> &nbsp;&nbsp;&nbsp;
                            <input name="role" type="radio" value="Admin" id="admin"><label for="admin">관리자</label> &nbsp;&nbsp;&nbsp;
                            <input name="role" type="radio" value="Owner" id="owner"><label for="owner">가맹점주</label> &nbsp;&nbsp;&nbsp;
                            <input name="role" type="radio" value="banner" id="banner"><label for="banner">사용자</label>
                            <br>
                          </div>


                         <div class="col-md-4">
                          <div class="form-group">
                            <label>이름</label>
                            <input name="bannername" type="text" class="form-control" placeholder="이름" value="">
                          </div>
                        </div>

                        <div class="col-md-4">
                          <div class="form-group">
                            <label>ID</label>
                            <input name="bannerid" type="text" class="form-control" placeholder="ID" value="">
                          </div>
                        </div>

                        <div class="col-md-4">
                          <div class="form-group">
                            <label>이메일</label>
                            <input name="email" type="text" class="form-control" placeholder="이메일" value="">
                          </div>
                        </div>

                        <div class="col-md-4">
                          <div class="form-group">
                            <label>연락처</label>
                            <input name="telephone" type="text" class="form-control" placeholder="연락처" value="">
                          </div>
                        </div>


                        <div class="col-md-4">
                          <div class="form-group">
                            <label>비밀번호</label>
                            <input name="password" type="text" class="form-control" placeholder="비밀번호" value="">
                          </div>
                        </div>

                      </div>
                      <div class="clearfix"></div>
                    </form>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary" id="createButton">저장</button>
                </div>
              </div>
            </div>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
                <th>이름</th>
                <th>아이디</th>
                <th>이메일</th>
                <th>연락처</th>
                <th>분류</th>
                <th>쿠폰</th>

                <th>작업</th>

              </thead>
              <tbody>
                <% %>
                <% for(var i=0; i<banners.length; i++){
                  var banner = banners[i];
                  %>
                  <tr>
                    <td><%=banner.bannerNo%></td>
                    <td><%=banner.bannerTitle%></td>
                    <td><%=banner.bannerDescription%></td>
                    <td><%=banner.bannerContents%></td>
                    <td><%=banner.createDate%></td>
                    <td><%=banner.showSeq%></td>

                    <td>
                      <button data-item="<%=banner.id%>" class="btn btn-danger btn-fill btn-sm deleteButton"><span class="fa fa-trash"></span></button>
                      <a href="edit/<%=banner.id%>" class="btn btn-info btn-fill btn-sm"><span class="fa fa-pencil"></span></button>
                    </td>
                  </tr>
                <% }%>
              </tbody>
            </table>
          </div>
        </div>

        <!--new-->

        </div>
      </div>
    </div>
  </div>
</div>

<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var banner =  $('#createForm').serializeObject();
    $.ajax({
      type:"POST",
      url:'/banners',
      data: {
        banner: banner
      },
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var bannerId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/banners/'+bannerId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
