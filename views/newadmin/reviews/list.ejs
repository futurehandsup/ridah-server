<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title"><%=title%>
              <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#createModal" data-backdrop="false">
              만들기
              </button></h4>
            <p class="category">Here is a subtitle for this table</p>
          </div>
          <!-- Modal -->
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
                <th>ID</th>

                <th>예약코드</th>
                <th>후기내용</th>
                <th>작성자</th>
                <th>작성일</th>
                <th>수정일</th>

                <th>작업</th>

              </thead>
              <tbody>
                <% %>
                <% for(var i=0; i<reviews.length; i++){
                  var review = reviews[i];
                  %>
                  <tr>
                    <td><%=i%></td>

                    <td><%=review.reservationCode%></td>
                    <td><%=review.reviewContnets%></td>
                    <td><%=review.userName%></td>
                    <td><%=review.createDate%></td>
                    <td><%=review.updateDate%></td>

                    <td>
                      <button data-item="<%=review.id%>" class="btn btn-danger btn-fill btn-sm deleteButton"><span class="fa fa-trash"></span></button>
                      <a href="edit/<%=review.id%>" class="btn btn-info btn-fill btn-sm"><span class="fa fa-pencil"></span></button>
                    </td>
                  </tr>
                <% }%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var review =  $('#createForm').serializeObject();
    $.ajax({
      type:"POST",
      url:'/reviews',
      data:review,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
        alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var reviewId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/reviews/'+reviewId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
