<% include ../templates/header.ejs %>
<div class="content">
  <div class="container-fluid">
    <div class="card"> <!--검색-->
      <div class="content">
        <form action="" method="get">
          <div class="row">
            <div class="col-md-3">
              <label>제목</label>
              <input type="text" name="faqTitle" value="<%=query.faqTitle%>" class="form-control search_key">
            </div>
            <div class="col-md-3">
              <label>노출여부</label>
              <select class="form-control search_key" name="showYn">
                <option value="1">노출</option>
                <option value="0">노출안함</option>
              </select>
            </div>
            <div class="col-md-3">
              <label>등록날짜(부터)</label>
              <input type="date" name="createDateMin" value="<%=query.createDateMin%>" class="form-control search_key">
            </div>
            <div class="col-md-3">
              <label>등록날짜(까지)</label>
              <input type="date" name="createDateMax" value="<%=query.createDateMax%>" class="form-control search_key">
            </div>
          </div>

          <div class="row">
            <div class="col-md-3 pull-left">
              <button class="btn search_submit">검색</button>
              <a href="list" class="btn search_submit search_reset">초기화</a>
            </div>
          </div>
        </form>
      </div>

    </div>
    <div class="card">
      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <th>질문번호</th>
            <th>제목</th>
            <th>작성일</th>
            <th>수정일</th>
            <th>노출여부</th>
            <th>노출순서</th>
            <th>조회수</th>
          </thead>
          <tbody>
            <% %>
            <% for(var i=0; i<faqs.length; i++){
              var faq = faqs[i];
              %>
              <tr>
                <td><%=faq.faqNo%></td>
                <td><a href="detail/<%=faq.faqNo%>"><%=faq.faqTitle%></a></td>
                <td><%=moment(faq.createDate).format("YYYY-MM-DD")%></td>
                <td><%=moment(faq.updateDate).format("YYYY-MM-DD")%></td>
                <td><%=(faq.showYn == 1) ? "노출" : "노출안함"%></td>
                <td><%=faq.showSeq%></td>
                <td><%=faq.viewCount%></td>
              </tr>
            <% }%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var faq =  $('#createForm').serializeObject();
    $.ajax({
      type:"POST",
      url:'/faqs',
      data:faq,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
  $('.deleteButton').click(function(){
    var faqId = $(this).data("item");
    $.ajax({
      type:"DELETE",
      url:'/faqs/'+faqId,

      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
