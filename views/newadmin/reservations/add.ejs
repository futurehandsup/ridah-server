<% include ../templates/header.ejs %>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <form id="createForm">
        <div class="col-md-8"> <!--왼쪽 승마장 상세정보-->
          <div class="card">
            <div class="content">
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label>사용자번호</label>
                    <input name="UserNo" type="text" class="form-control" placeholder="썸네일">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label>승마장번호</label>
                    <input name="storeNo" type="text" class="form-control" placeholder="썸네일">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label>프로그램번호</label>
                    <input name="programNo" type="text" class="form-control" placeholder="대표자">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label>스케줄번호</label>
                    <input name="scheduleNo" type="text" class="form-control" placeholder="썸네일">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4"> <!--오른쪽 승마장 상세정보-->
          <div class="card">
            <div class="content">
              <div class="row">
                <div class="form-group col-md-12">
                  <label>예약자명</label>
                  <input name="reservationName" type="text" class="form-control" placeholder="예약자명">
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-12">
                  <label>연락처</label>
                  <input name="reservationPhoneNumber" type="text" class="form-control" placeholder="연락처">
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-12">
                  <label>예약수량</label>
                  <input name="reservationAmount" type="text" class="form-control" placeholder="예약수량">
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-12">
            <button id="createButton" type="button" class="btn btn-info btn-fill pull-right">저장</button>
            <a href="list" type="button" class="btn btn-info pull-left">이전으로</a>
            <div class="clearfix"></div>
          </div>
        </div>

      </form>

    </div>
  </div>
</div>

<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var reservation =  $('#createForm').serializeObject();
    console.log(reservation);

    $.ajax({
      type:"POST",
      url:'/apis/admin/reservation',
      data:reservation,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
