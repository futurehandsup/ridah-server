<% include ../templates/header.ejs %>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <form id="createForm">
        <div class="col-md-8"> <!--왼쪽 승마장 상세정보-->
          <div class="card">
            <div class="content">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>승마장번호</label>
                    <input name="storeNo" type="text" class="form-control" placeholder="승마장번호">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>정산연도</label>
                    <input name="calculationYear" type="text" class="form-control" placeholder="정산연도">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>정산월</label>
                    <input name="calculationMonth" type="text" class="form-control" placeholder="정산월"">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>정산금액</label>
                    <input name="calculationPrice" type="text" class="form-control" placeholder="금액">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>정산기한</label>
                    <input name="calculationDueDate" type="date" class="form-control" placeholder="">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4"> <!--오른쪽 승마장 상세정보-->
          <div class="card">
            <div class="content">
              <div class="row">
                <div class="form-group col-md-12">
                  <label>입금은행</label>
                  <input name="accountBank" type="text" class="form-control" placeholder="은행">
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-12">
                  <label>입금계좌</label>
                  <input name="accountInfo" type="text" class="form-control" placeholder="계좌">
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-12">
            <button id="createButton" type="button" class="btn btn-info btn-fill pull-right">저장</button>
            <a href="../calculations/list" type="button" class="btn btn-info pull-left">이전으로</a>
            <div class="clearfix"></div>
          </div>
        </div>

      </form>

    </div>
  </div>
</div>

<% include ../templates/bottom.ejs %>
<script>
$(document).ready(function(){
  $('#createButton').click(function(){
    var calculation =  $('#createForm').serializeObject();
    console.log(calculation);

    $.ajax({
      type:"POST",
      url:'/apis/admin/calculation',
      data:calculation,
      success:function(args){
        alert("성공했습니다.");
        location.reload();
      },
      error:function(e){
          alert(e.responseText);
      }
    });
  });
});
</script>
